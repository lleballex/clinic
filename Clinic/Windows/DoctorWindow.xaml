<Window x:Class="Clinic.Windows.DoctorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clinic.Windows"
        xmlns:patientControls="clr-namespace:Clinic.Controls.Patient"
        xmlns:doctorControls="clr-namespace:Clinic.Controls.Doctor"
        mc:Ignorable="d"
        Style="{StaticResource Window}">
    <TabControl>
        <TabItem Header="Мои приемы">...</TabItem>
        <TabItem Header="Пациенты">
            <patientControls:Patients />
        </TabItem>
        <TabItem Header="Врачи">
            <doctorControls:Doctors />
        </TabItem>
    </TabControl>
</Window>
