<UserControl x:Class="Clinic.View.Controls.CurDoctorAppointments"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Clinic.View.Controls"
             mc:Ignorable="d" 
             d:Style="{StaticResource ControlDesignStyle}">
    <ScrollViewer Padding="0,0,16,0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="16" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="16" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Style="{StaticResource Heading1}">Мои приемы</TextBlock>

            <DatePicker Grid.Row="2" />

            <StackPanel Grid.Row="4">
                <local:AppointmentCard Margin="0,0,0,16" />
                <local:AppointmentCard Margin="0,0,0,16" />
                <local:AppointmentCard Margin="0,0,0,16" />
                <local:AppointmentCard Margin="0,0,0,16" />
                <local:AppointmentCard Margin="0,0,0,16" />
                <local:AppointmentCard />
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
